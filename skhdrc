# Open new iTerm window
ctrl + alt + cmd - t -> : osascript -e 'tell application "iTerm" to create window with default profile'

# Focus on Slack
ctrl + alt + cmd - s -> : osascript -e 'tell application "Slack" to activate' \
  -e 'delay 0.3' \
  -e 'tell application "System Events" to keystroke 1 using command down' \
  -e 'delay 0.3' \
  -e 'tell application "System Events" to keystroke k using command down'

ctrl + alt + cmd - r -> : chunkc tiling::desktop --rotate 90

# Change tile focus
ctrl + alt + cmd - h : chunkc tiling::window --focus west
ctrl + alt + cmd - j : chunkc tiling::window --focus south
ctrl + alt + cmd - k : chunkc tiling::window --focus north
ctrl + alt + cmd - l : chunkc tiling::window --focus east

# Set layout
ctrl + alt + cmd - c : chunkc tiling::desktop --layout bsp
ctrl + alt + cmd - f : chunkc tiling::desktop --layout float
